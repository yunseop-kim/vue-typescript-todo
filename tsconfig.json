{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "es2015.promise",
      "es6"
    ],
    "types": [
      "vue-typescript-import-dts",
      "reflect-metadata",
       "node"
    ],
    "typeRoots": [ "./node_modules/@types" ],
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": false
}